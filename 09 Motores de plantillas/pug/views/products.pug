html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Class 10: Motores de plantillas
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body
        .container
            .row.d-flex.justify-content-center
                .col-6
                    .products.mt-4
                        each product in products
                            ul.list-group.mt-2                      
                                li.list-group-item.d-flex.justify-content-around.align-items-center  
                                    p= product.id
                                    p= product.title
                                    p= product.price
                                    img(src=product.thumbnail, alt=product.title width=`20%`, height=`20%`)
                        else
                            h3.alert.alert-danger Products not found
                        a.btn.btn-dark.mt-2.mx-2(href="./") Upload new products
                        
