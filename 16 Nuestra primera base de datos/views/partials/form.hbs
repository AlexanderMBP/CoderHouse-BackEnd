<form class="mt-4">
    <div class="title">
        <label for="title" class="fs-4">Title:</label>
        <input type="text" name="title" id="Title" class="form-control">
    </div>
    <div class="Product_description">
        <label for="Product_description" class="fs-4">Product description:</label>
        <input type="text" name="Product_description" id="Product_description" class="form-control">
    </div>
    <div class="price">
        <label for="price" class="fs-4">Price:</label>
        <input type="text" name="price" id="Price" class="form-control">
    </div>
    <div class="code">
        <label for="code" class="fs-4">Code:</label>
        <input type="text" name="code" id="code" class="form-control">
    </div>
    <div class="Thumbnail">
        <label for="Thumbnail" class="fs-4">Thumbnail:</label>
        <input type="text" name="Thumbnail" id="Thumbnail" class="form-control">
    </div>
    <div class="Stock">
        <label for="Stock" class="fs-4">Stock:</label>
        <input type="number" name="Stock" id="Stock" class="form-control">
    </div>
    <button type="button" class="btn btn-dark mt-2" id="saveProduct">Save product</button>
</form>
